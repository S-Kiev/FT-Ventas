---
import Layout from '../../layouts/Layout.astro';
const { id } = Astro.params;

const response = await fetch(`https://bk-ventas-production.up.railway.app/api/productos/${id}`);
const producto = await response.json();
---

<Layout>
    <div class="row mt-5">
        <div  class="col-ms-4">
            <img src={producto.data.attributes.imagen} alt="imagen" class="img-fluid rounded-start">
        </div>
        <div class="col-ms-8">
            <div class="card-body">
                <h5 class="card-title">{producto.data.attributes.nombre}</h5>
                <p class="card-text">Precio: {producto.data.attributes.precioVenta} $</p>
                <a href="#" class="btn btn-primary"> agregar</a>
                <a href="/" class="btn btn-primary"> Volver</a>
            </div>
        </div>
    </div>
</Layout>